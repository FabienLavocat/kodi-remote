<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:KodiRemote.Wp81.Converters"
                    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone">

    <converters:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter" />
    <converters:SecondsToStringConverter x:Key="SecondsToStringConverter" />
    <converters:MilliSecondsToStringConverter x:Key="MilliSecondsToStringConverter" />
    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <converters:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter" />
    <converters:ShorterStringConverter x:Key="ShorterStringConverter" />

    <!-- LongListSelector -->
    <phone:JumpListItemBackgroundConverter x:Key="JumpListItemBackgroundConverter" />
    <phone:JumpListItemForegroundConverter x:Key="JumpListItemForegroundConverter" />
    
</ResourceDictionary>
