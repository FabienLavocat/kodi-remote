                                       Text="{Binding Path=LocalizedResources.Page_Actions_Power_Off, Source={StaticResource LocalizedStrings}}"
                                       Foreground="#BD2424"
                                       VerticalAlignment="Center"
                                       Margin="10,0" />
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource HorizontalButtonStyle}"
                            Click="BtHibernate">
